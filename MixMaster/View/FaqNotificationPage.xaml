<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MixMaster.View.FaqNotificationPage"
             BackgroundColor="#000000AA">
    <!-- Semi-transparent background -->

    <Frame BackgroundColor="Black"
           Padding="20"
           CornerRadius="10"
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand"
           WidthRequest="300"
           HeightRequest="200">
        <StackLayout>
            <Label Text="Most Asked Question"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Label Text="What is .NET MAUI?" />
            <!-- Example question -->
            <Label Text="Answer: .NET MAUI is a cross-platform framework for creating native mobile and desktop apps with C# and XAML." />
            <Button Text="Close"
                    Clicked="OnCloseButtonClicked"/>
        </StackLayout>
    </Frame>
</ContentPage>
